<%= render 'shared/navbar' %>

<div class="container valign-wrapper" style="height: 100vh;">
  <div class="container">
    <div class="container">
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="card white darken-1" style="width: 400px;">
            <div class="card-content grey-text">
              <span class="card-title">Sign up</span>
              <%= simple_form_for :participation, url: expedition_participations_path(@expedition) do |f| %>
                <%= f.input :email, label: "Email", placeholder: "Email" %>
                <%= f.input :first_name, label: "First Name", placeholder: "First Name" %>
                <%= f.input :last_name, label: "Last Name", placeholder: "Last Name" %>
                <%= f.submit "Add participant", class: "btn green" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<video autoplay  poster="http://i.imgur.com/Ad3Qidh.png" id="bgvid" loop>
</video>
