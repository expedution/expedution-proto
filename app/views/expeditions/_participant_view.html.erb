    <!-- Expeditions details ============ -->
    <div class="container padded">
      <div class="row">

    <!-- Days ============= -->
        <div class="day">
          <div class="col s12 m1 l1 pull-l1 white z-depth-1" style="border-radius: 5px;">
            <div class="collection pinned">
              <% @days.each_with_index do |day, index| %>
                <%= link_to "Day #{index + 1}", "#day#{day.id}", class: "collection-item" %>
              <% end %>
            </div>
          </div>
        </div>

    <!-- Activities ======================== -->
      <!-- Description ===================== -->
        <div class="activities">
          <div class="col s12 m8 offset-m2 l8 white z-depth-1" style="border-radius: 5px;">
            <div class="banner-small image-responsive" style="background-image: linear-gradient(to right, rgba(224, 93, 73,0.6) 0%, rgba(153, 107, 130,0.6) 40%, rgba(87, 135, 198,0.6) 80%, rgba(62, 151, 232,0.6) 100%), url('http://www.jetblue.com/img/vacations/destination/San-Francisco-960-x-420.jpg'); padding: off">
              <div class="banner-content">
                <h2>Disvover The Valley</h2>
              </div>
            </div>

            <!-- Description =================== -->
            <div class="expedition-description">
              <h5><%= @expedition.title %></h5>
              <p class="padded-extra-small">
              <%= @expedition.description %>
              </p>
            </div>
            <!-- Map ======================== -->
            <div id="map" style="width: auto; height: 200px; margin-right: -11px; margin-left: -11px; "></div>

            <!-- Days ========= -->
            <% @days_expedition.each do |day| %>
              <!-- Activity ========= -->
              <div class="row padded-extra-small">
                <div class="col s12 m12">
                  <div class="card white" id="day<%= day.id %>">
                    <div class="card-content grey-text">
                      <%= render 'activities/activity_show', activities: day.activities %>
                  </div>
                </div>
              </div>
              <!-- End Activity ======================= -->
            </div>
          <% end %>
          </div>
        </div>

        <!-- Participants ====================== -->
        <div class="participants">
          <div class="col s12 m3 l3 white push-l1 z-depth-1" style="border-radius: 5px;">
            <ul class="collection with-header pinned" style="margin-right: -12px; margin-left: -12px; margin-top: 0px; margin-bottom: 0px;">
              <li class="collection-header"><h4>Participants</h4></li>
              <!-- ItÃ¨re dans les participations de l'expedition et ensuite sur le User -->
              <% @expedition.participations.each do |participant| %>
                <li class="collection-item">
                  <div>
                    <%= participant.user.first_name %><%= participant.user.last_name %>
                    <a class="secondary-content modal-trigger" href="#modal1" ><i class="material-icons">question_answer</i></a>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

