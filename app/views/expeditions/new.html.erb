<div class="wrapper">
  <div class="container">
    <h3 class="text-center">Create your learning expedition</h3>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 card-form">
        <%= simple_form_for @expedition do |f| %>
          <div class="row">
            <div class="col-xs-12 col-sm-6">
              <%= f.input :title, label: "Expedition title", placeholder: "Title", input_html: {maxlength: 30} %>
              <%= f.input :description, label: "Expedition description", input_html: {maxlength: 400}, placeholder: "400 Char. Max" %>
              <%= f.input :theme, label: "Expedition theme", input_html: {maxlength: 20}, placeholder: "Theme" %>
              <%= f.input :location, label: "Location", placeholder: "Where are you going?" %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
            <div class="col-xs-12 col-sm-6">
              <%= f.input :capacity, label: "Capacity", placeholder: "Select number of people" %>
              <%= f.input :starts_on, label: "Start time", id: "timepicker" %>
              <%= f.input :ends_on, label: "End time" %>
              <%= f.submit "Add expedition", class: "btn btn-success" %>
              <%= link_to "Cancel", dashboard_path, class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
$(function() {
  $( "#timepicker" ).timepicker();
});
</script>
