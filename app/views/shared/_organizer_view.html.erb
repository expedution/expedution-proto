  <%= render 'shared/lateral_navbar' %>

  <div class="central-content">
    <div class="">
      <div class="">
        <div class="lex-banner" style='background: url(
          <% if current_user.photo.url == nil %>
            <%= "https://unsplash.it/900/201" %>
          <% else %>
            <%= image_tag @expedition.photo %>
          <% end %>
        ')>
        <h1 class="expedition-title"><%= @expedition.title %></h1>
        <p class="expedition-participant-number">(x) participants confirmed</p>
      </div>
      </div>
      <div class="">
        <div class="col-xs-4">
          <div class="lex-days">

            <%= render 'expeditions/organizer_exp_day_box' %>

            <p class="custom-btn">+ New Day</p>
          </div>
        </div>
        <div class="col-xs-8">
          <div class="lex-activities">
            <div class="activity-header">
              <div class="activity-day-header">
                <p>Day</p>
                <p>1</p>
              </div>
              <p>Day Title</p>
              <p class="add-activity">+ New Activity</p>
            </div>
            <div class="activity-box-section">

              <%= render 'expeditions/organizer_exp_activity_box', day: @expedition.days.first %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="right-sidebar">
    <div class="right-sidebar-tabs">
      <div class="col-xs-6">
        <div class="right-sidebar-tab tab-participants">
          <p>Participants</p>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="right-sidebar-tab tab-feedbacks">
          <p>Feedbacks</p>
        </div>
      </div>
    </div>

    <div class="right-sidebar-content">
      <div class = "participant-box">
        <div class="user-photo avatar" style='background: url(
          <% if current_user.photo.url == nil %>
            <%= "https://unsplash.it/50/50" %>
          <% else %>
            <%= image_tag @expedition.photo %>
          <% end %>
          ')>
        </div>
        <div class="edit-logo" style="background: url(<%= asset_path 'edit-icon.png' %>")></div>
        <div class="delete-logo" style="background: url(<%= asset_path 'delete-icon.png' %>")></div>
        <div class="content-participant">
          <div>
            <p class="participant-name"> Last_name</p>
            <p class="participant-job">Job - Company</p>
          </div>
          <div>
            <i class="fa fa-phone"></i>
            <i class="fa fa-envelope"></i>
          </div>
          <!-- <p class="participant-details">details</p> -->
        </div>
        <div class ="participant-invite">
          <p>Invite participant</p>
        </div>

      </div>
      <div class="row">
        <p class="add-participant">+ New Participant</p>
      </div>
    </div>
  </div>
