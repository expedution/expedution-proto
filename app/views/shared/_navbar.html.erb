<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag("logo_expedution.png", :alt => "logo") %>
  </a>

  <!-- Right Navigation -->
    <!-- Different navigation if login or not -->
  <div class="navbar-wagon-item" style="padding-top:10px">
    <% if user_signed_in? %>
      <!-- Profile picture and dropdown -->
        <ul class="list-inline list-unstyled hidden-xs hidden-sm">
          <%= render 'shared/navbar_links', current_user: current_user %>
        </ul>
    <% else %>
      <!-- Login text link -->
      <ul class="list-inline list-unstyled hidden-xs hidden-sm">
          <li><%= link_to "About", about_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    <% end %>

    <!-- Button (call-to-action) -->
   <!--  <= link_to t(".top_call_to_action", default: "Post stuff"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %> -->
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%= render 'shared/navbar_links' %>
      </ul>
    </div>
  </div>
</div>


