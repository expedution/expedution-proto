<%= render 'shared/lateral_navbar' %>

<div class="container">
  <div class="wrapper-mini style1 padded text-center">
    <ul class="list-unstyled">
      <li>
        <% if current_user.photo.url == nil %>
          <img src="http://placehold.it/100" class="avatar-xl">
        <% else %>
          <%= image_tag @user.photo.url, class: "avatar-xl" %>
        <% end %>
      </li>
      <li>
        <h5>Welcome <%= @user.first_name %> <%= @user.last_name %> !</h5>
      </li>
    </ul>
    <% if policy(@user).update? %>
      <div class="text-center"><%= link_to "Create Expedition", new_expedition_path, class: "btn btn-success" %></div>
    <% end %>
  </div>
  <% @expeditions.each do |expedition| %>
    <div class="row">
      <div class="col s12">
        <div class="card small">
          <div class="card-image">
            <% if expedition.photo.url == nil %>
              <img src="http://placehold.it/500">
            <% else %>
              <%= image_tag @expedition.photo.url %>
            <% end %>
            <span class="card-title"><%= expedition.title %></span>
          </div>
          <div class="card-content">
            <p><%= expedition.description %></p>
          </div>
  <!--         <div class="card-action">
            <a href="#">This is a link</a>
          </div> -->
        </div>
      </div>
    </div>
  <% end %>
</div>
