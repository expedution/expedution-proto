<!-- ORGANIZER DASHBOARD -->
<div class="container top-padded">
<% @expeditions.each do |expedition| %>
  <div class="row">
    <div class="col s12">
    <a class="modal-trigger" href="#modal2">
      <div class="card white darken-1 hoverable z-depth-0">
        <div class="card-content grey-text">
          <span class="card-title"><%= expedition.title %></span>
          <div class="row">
            <div class="col s4">
              <div class="card-image">
              <% if expedition.photo.url == nil %>
                <img src="http://www.jetblue.com/img/vacations/destination/San-Francisco-960-x-420.jpg">
              <% else %>
                <%= image_tag expedition.photo.url %>
              <% end %>
              </div>
            </div>
            <div class="col s7">
              <p><%= expedition.description %></p>
              <div style="position: relative; height: 70px;">
                <div class="fixed-action-btn horizontal click-to-toggle" style="position: absolute; right: 20px; top:20px;">
                  <a class="btn-floating btn-large red">
                    <i class="material-icons">menu</i>
                  </a>
                  <ul>
                    <li>
                      <%= link_to "#edit-exp-modal-#{expedition.id}", class: "modal-trigger btn-floating red" do %>
                      <i class="material-icons">insert_chart</i>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to expedition_path(expedition), class: "btn-floating yellow darken1", method: :delete do %>
                      <i class="material-icons">format_quote</i>
                      <% end %>
                    </li>
                  </ul>
                  <%= render 'expeditions/edit', expedition: expedition %>
                </div>
              </div>
            </div>
            <div class="col s1" style="margin-top: 15px">
              <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
    </a>
    </div>
  </div>
  <hr>
  <% end %>
</div>









<script>
  $(function() {
    $( "#datepicker" ).datepicker();
  });
</script>
