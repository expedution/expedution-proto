<%= render 'shared/navbar' %>
<div class="container valign-wrapper" style="height: 100vh;">
  <div class="container">
    <div class="container">
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="card white darken-1" style="width: 400px;">
            <div class="card-content grey-text">
              <span class="card-title">Log in</span>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: false, autofocus: true, input_html: {style: "border-bottom: 1px solid black;"} %>
                  <%= f.input :password, required: false, input_html: {style: "border-bottom: 1px solid black;"} %>
                </div>

                <div class="form-actions text-center" style="padding: 20px">
                  <%= f.button :submit, "Log in" %>
                </div>
                <div class="form-actions text-center" style="padding-top: -40px;">
                  <%= link_to "sign up", new_user_registration_path %>
                </div>
                <div class="form-actions text-center" style="padding-top: -40px;">
                  <%= link_to "Forgotten password?", new_user_password_path %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<video autoplay  poster="http://i.imgur.com/Ad3Qidh.png" id="bgvid" loop>
</video>

