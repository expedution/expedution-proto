

<div class="container valign-wrapper" style="height: 100vh;">
  <div class="container">
    <div class="container">
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="card white darken-1" style="width: 400px;">
            <div class="card-content grey-text">
              <span class="card-title">Login</span>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: true, autofocus: true %>
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true %>
                </div>

                <div class="form-actions text-center" style="padding: 20px">
                  <%= f.button :submit, "Sign up" %>
                </div>
                <div class="form-actions text-center" style="padding-top: -40px;">
                  <%= link_to "login", new_user_session_path %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


