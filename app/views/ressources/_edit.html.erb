<div id="edit-ressource-modal-<%= ressource.id %>" class="modal" >
  <div class="container">
    <h3 class="modal-title text-center">Edit your ressource</h3>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 card-form">
        <%= simple_form_for ([@expedition, ressource]) do |f| %>
        <div>
          <%= f.input :name, label: "Resource name", input_html: {maxlength: 30} %>
          <%= f.input :category, collection: Ressource::RESSOURCES_CATEGORY, prompt: "Resource type" %>
          <%= f.input :url, label: "Resource URL"%>
          <%= f.input :description, label: "Resource description", input_html: {maxlength: 1000} %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :activity_id, as: :hidden %>
          <div class="col-xs-6">
            <%= link_to "Cancel", expedition_path, class: "btn btn-danger" %>
          </div>
          <div class="col-xs-6">
            <%= f.submit "Submit", class: "btn btn-success" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
