<div id="new-activity-modal-<%=@expedition.id%>" class="modal-mat" >
  <div class="container">
    <h3 class="text-center">Create your activity</h3>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 card-form">
        <%= simple_form_for [@expedition, Activity.new] do |f| %>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <%= f.input :title, label: "Activity name", placeholder: "Activity name", input_html: {maxlength: 30} %>

            <%= f.input :category, collection: Activity::ACTIVITY_CATEGORY, prompt: "Activity type" %>

            <% days = @expedition.days %>
            <%= f.input :day_id, collection: days.map(&:formatted_date).zip(days.map(&:id)), prompt: "Activity day" %>


            <%= f.input :address, label: "Address", input_html: {maxlength: 100}, placeholder: "Location" %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <%= f.input :starts_on, as: :string, label: "Start time", input_html: { class: "timepicker" } %>
            <%= f.input :ends_on, as: :string, label: "End time", input_html: { class: "timepicker" }  %>
          </div>
        </div>
        <div class="row">
          <%= f.input :description, label: "Activity description", input_html: {maxlength: 1000}, placeholder: "Provide an activity description" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <div class="col-xs-6">
            <%= link_to "Cancel", expedition_path, class: "btn btn-danger" %>
          </div>
          <div class="col-xs-6">
            <%= f.submit "Add activity", class: "btn btn-success" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
