<div id="edit-activity-modal-<%= activity.id %>" class="modal" >
  <div class="container">
    <h3 class="modal-title text-center">Edit your activity</h3>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 card-form">
        <%= simple_form_for [@expedition, activity] do |f| %>
        <div>
          <%= f.input :title, label: "Activity name", input_html: {maxlength: 30} %>
        </div>
        <div>
          <div class="col-xs-12 col-sm-6">
            <%= f.input :category, collection: Activity::ACTIVITY_CATEGORY %>
            <%= f.input :starts_on, as: :string, label: "Start time", input_html: { class: "timepicker" } %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <% days = @expedition.days %>
            <%= f.input :day_id, collection: days.map(&:formatted_date).zip(days.map(&:id)) %>
            <%= f.input :ends_on, as: :string, label: "End time", input_html: { class: "timepicker" } %>
          </div>
        </div>
        <div>
          <%= f.input :address, label: "Address", input_html: {maxlength: 100} %>
          <%= f.input :description, label: "Activity description", input_html: {maxlength: 1000} %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <div class="col-xs-6">
            <%= link_to "Cancel", expedition_path, class: "btn btn-danger" %>
          </div>
          <div class="col-xs-6">
            <%= f.submit "Submit", class: "btn btn-success" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
